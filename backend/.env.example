# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/maps_nigeria
# For production use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/maps_nigeria

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Paystack (Nigerian Payment Gateway)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# Firebase (for push notifications and auth)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# AdMob (for ads)
ADMOB_APP_ID=ca-app-pub-your-admob-app-id
ADMOB_BANNER_ID=ca-app-pub-your-banner-id
ADMOB_INTERSTITIAL_ID=ca-app-pub-your-interstitial-id

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Admin Credentials
ADMIN_EMAIL=admin@mapsnigeria.com
ADMIN_PASSWORD=change-this-secure-password

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# AWS S3 (for photo uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=maps-nigeria-uploads
AWS_REGION=us-east-1

# Cloudinary (alternative for images)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
